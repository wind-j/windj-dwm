+void
+runautostart(void)
+{
+	char *pathpfx;
+	char *path;
+	char *xdgdatahome;
+	char *home;
+	struct stat sb;
+
+	if ((home = getenv("HOME")) == NULL)
+		/* this is almost impossible */
+		return;
+
+	// 1. $HOME/.config/dwm"
+	/* space for path segments, separators and nul */
+	pathpfx = ecalloc(1, strlen(home) + strlen(localconfig) +  strlen(dwmdir) + 3);
+	if (sprintf(pathpfx, "%s/%s/%s", home, localconfig, dwmdir) <= 0) {
+		free(pathpfx);
+		return;
+	}
+	/* check if the autostart script directory exists */
+	if (stat(pathpfx, &sb) == 0 && S_ISDIR(sb.st_mode)) {
+		goto run_scripts;
+	}
+	/* free mem, test next directory */
+	free(pathpfx);
+
+	// 2. $HOME/.dwm"
+	pathpfx = ecalloc(1, strlen(home) + strlen(dwmdir) + 3);
+	if (sprintf(pathpfx, "%s/.%s", home, dwmdir) <= 0) {
+		free(pathpfx);
+		return;
+	}
+	if (stat(pathpfx, &sb) == 0 && S_ISDIR(sb.st_mode)) {
+		goto run_scripts;
+	}
+
+	free(pathpfx);
+
+	// 3. $HOME/.local/share/dwm"
+	pathpfx = ecalloc(1, strlen(home) + strlen(localshare) + strlen(dwmdir) + 3);
+	if (sprintf(pathpfx, "%s/%s/%s", home, localshare, dwmdir) < 0) {
+		free(pathpfx);
+		return;
+	}
+	if (stat(pathpfx, &sb) == 0 && S_ISDIR(sb.st_mode)) {
+		goto run_scripts;
+	}
+
+	free(pathpfx);
+
+	// 4. $XDG_DATA_HOME/dwm"
+	xdgdatahome = getenv("XDG_DATA_HOME");
+	if (xdgdatahome == NULL && *xdgdatahome == '\0') {
+		// $XDG_DATA_HOME is not set or empty
+		return;
+	}
+	pathpfx = ecalloc(1, strlen(xdgdatahome) + strlen(dwmdir) + 2);
+	if (sprintf(pathpfx, "%s/%s", xdgdatahome, dwmdir) <= 0) {
+		free(pathpfx);
+		return;
+	}
+
+run_scripts:
+	/* try the blocking script first */
+	path = ecalloc(1, strlen(pathpfx) + strlen(autostartblocksh) + 2);
+	if (sprintf(path, "%s/%s", pathpfx, autostartblocksh) <= 0) {
+		free(path);
+		free(pathpfx);
+	}
+
+	if (access(path, X_OK) == 0)
+		system(path);
+
+	/* now the non-blocking script */
+	if (sprintf(path, "%s/%s", pathpfx, autostartsh) <= 0) {
+		free(path);
+		free(pathpfx);
+	}
+
+	if (access(path, X_OK) == 0)
+		system(strcat(path, " &"));
+
+	free(pathpfx);
+	free(path);
+}
